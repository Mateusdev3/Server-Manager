<Window x:Class="Server_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server_Manager"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="Madara_Manager" Height="505" Width="900" 
        Loaded="Window_Loaded">
    <Grid MouseDown="Mouse">

        <!-- Imagem de fundo  -->

        <Grid.Background>

            <ImageBrush ImageSource="Assets\fundo.png"/>

        </Grid.Background>

        <!-- Rodapés -->

        <Border Width="900" Height="60" VerticalAlignment="Top" Background="Black" Opacity="0.5"/>
        <Border Width="114" HorizontalAlignment="Left" Background="Black" Panel.ZIndex="-1" Opacity="0.5" Margin="0,60,0,106"/>

        <!-- Botões laterais -->

        <Button Click="Windowbanmanager" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="70" Height="70" Margin="22,0,0,122" Background="Transparent" BorderBrush="Transparent">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Image Source="Assets\ban.png" Width="50" Height="50" />
            </StackPanel>
        </Button>


        <Button  HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="70" Height="70" Margin="24,0,0,241" Background="Transparent" BorderBrush="Transparent">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="Assets\lupa.png" Width="50" Height="50" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>


        <Button  HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="70" Height="70" Margin="24,0,0,370" Background="Transparent" BorderBrush="Transparent">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="Assets\config.png" Width="50" Height="50"/>
            </StackPanel>
        </Button>

        <!-- Botões minimizar e fechar -->
        <Button Content="x" Width="50" Height="24" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,18,10,0" Background="Black" Foreground="White" Click="Fechar_Janela"/>
        <Button Content="-" Width="50" Height="24" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,18,79,0" Background="Black" Foreground="White" Click="Minimizar_Janela"/>


        <!-- Botões Iniciar e Fechar -->

        <Button Content="Iniciar" FontSize="20" FontStyle="Oblique"
        RenderTransformOrigin="0.842,1.668" Margin="696,423,24,18" Background="Black"
        Foreground="White" BorderBrush="White" BorderThickness="2" FontWeight="Bold" Click="Iniciar"/>

        <Button Content="Fechar" FontSize="20" FontWeight="Bold" FontStyle="Oblique" Background="Black"
        Foreground="White" BorderBrush="White" BorderThickness="2" Margin="24,423,696,18" Click="Fechar"/>

        <Border Width="900" Height="100" VerticalAlignment="Top" Background="Black" Opacity="0.5" Panel.ZIndex= "-1" Margin="0,395,0,0"/>

        <!-- Checkbox -->

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="420" Height="50" Margin="0,430,0,0" Orientation="Horizontal">

            <CheckBox x:Name="Ch1" Content="Batlleye" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Width="65" Margin="10"/>
            <CheckBox x:Name="Ch2" Content="Mods" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"  Width="60" Margin="10" />
            <CheckBox x:Name="Ch3" Content="Rbec" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Margin="10"/>
            <CheckBox x:Name="Ch4" Content="Whitelist" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"  Width="70" Margin="10"/>
            <CheckBox x:Name="Ch5" Content="Recrash" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"  Width="80" Margin="10"/>

        </StackPanel>





    </Grid>
</Window>
